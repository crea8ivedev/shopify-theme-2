<div class="collection-card">
  <div class="collection-card__image-wrapper">
    <a href="{{ collection.url | default: '#' }}" class="collection-card__link">
      {%- if collection.featured_image -%}
        <img
          src="{{ collection.featured_image | image_url: width: 500 }}"
          srcset="
            {{ collection.featured_image | image_url: width: 250 }} 250w,
            {{ collection.featured_image | image_url: width: 500 }} 500w,
            {{ collection.featured_image | image_url: width: 750 }} 750w
          "
          sizes="(max-width: 768px) 100vw, 500px"
          alt="{{ collection.featured_image.alt | escape }}"
          loading="lazy"
          class="collection-card__image"
          width="auto"
          height="auto"
        >
      {%- else -%}
        {{ 'image' | placeholder_svg_tag }}
      {%- endif -%}
    </a>
  </div>

  <div class="collection-card__content">
    <div class="collection-card-details">
      <h3 class="collection-card__title">
        <a href="{{ collection.url | default: '#' }}" class="collection-card__link">
          {{ collection.title | default: 'Your Collection Name' | escape }}
          <span class="icon-wrap">
            {% render 'icon-arrow' %}
          </span>
        </a>
      </h3>
    </div>
  </div>
  
  <p class="collection-card__description">
    {{ collection.description | escape }}
  </p>
</div>
