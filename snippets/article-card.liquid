<article class="article-card">
    {%- if article.image -%}
      <a href="{{ article.url }}" class="article-card__image">
        <img src="{{ article.image | image_url }}" alt="{{ article.image.alt | escape }}" height="auto" width="auto">
      </a>
    {%- endif -%}
  
    <div class="article-card__content">
      <h2 class="article-card__title">
        <a href="{{ article.url }}">{{ article.title }}</a>
      </h2>
  
      <div class="article-card__meta">
        {%- if article.author -%}
          <span class="article-card__author">
            {{ article.author }}
          </span>
        {%- endif -%}
        <span class="article-card__date">
          {{ article.published_at | date: "%B %d, %Y" }}
        </span>
      </div>
  
      {%- if article.excerpt_or_content -%}
        <p class="article-card__excerpt">
          {{ article.excerpt_or_content | strip_html | truncatewords: 30 }}
        </p>
      {%- endif -%}
  
      {%- if article.tags.size > 0 -%}
        <div class="article-card__tags">
          {%- for tag in article.tags limit: 1 -%}
            <span class="article-card__tag-badge">{{ tag }}</span>
          {%- endfor -%}
        </div>
      {%- endif -%}
      <a href="{{ article.url }}" class="article-card__read-more">Read More â†’</a>
    </div>
  </article>