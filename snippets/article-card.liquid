<article class="article-card article-card-wrapper swiper-slide ">
  <div class=" card--{{ settings.blog_card_style }} card underline-links-hover card__media {% if settings.blog_card_style == 'card' %} color-{{ settings.blog_card_color_scheme }}{% endif %}">
    <div class="card__inner">

    <div class="article-card__image-wrapper ">
    {%- if show_image == true and article.image -%}
      <a href="{{ article.url }}" class="article-card-image">
        <img src="{{ article.image | image_url }}" alt="{{ article.image.alt | escape }}" height="auto" width="auto">
      </a>
    {%- endif -%}
    </div>
     </div>
    <div class="article-card-content card card__content">
      <div class="card__information">
        <h2 class="article-card-title card__heading">
          <a href="{{ article.url }}" class="full-unstyled-link">{{ article.title }}</a>
        </h2>
  
        <div class="article-card-meta article-card__info caption-with-letter-spacing h5">
          {%- if show_author and article.author -%}
            <span class="article-card-author">{{ article.author }}</span>
          {%- endif -%}
          {%- if show_date -%}
            <span class="article-card-date">{{ article.published_at | date: '%B %d, %Y' }}</span>
          {%- endif -%}
        </div>
  
        <p class="article-card-excerpt rte-width">
          {{ article.excerpt_or_content | strip_html | truncatewords: 30 }}
        </p>

  
        <div class="article-card-footer">
          <a href="{{ article.url }}" class="article-card-read-more">Read More â†’</a>
        </div>
      </div>
      
   
  </div>
</div>
 
</article>