
{% comment %}
  Optimized Product Card for Dawn Theme
{% endcomment %}

<div class="card-wrapper">
  <div class="card">
      <div class="card__inner">
          <div class="card__media">
              <a href="{{ product.url }}">
                  <img class="motion-reduce primary-image" src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title | escape }} by {{ product.vendor | escape }}" height="auto" width="auto">
                  
                  {% if product.images.size > 1 %}
                      <img class="motion-reduce secondary-image" src="{{ product.images[1] | image_url: width: 400 }}" alt="{{ product.title | escape }} second image" height="auto" width="auto">
                  {% endif %}
              </a>
              {% if product.compare_at_price > product.price %}
                  <div class="badge badge--sale">Sale</div>
              {% endif %}
          </div>

          <div class="card__content">
              <h3 class="card__heading">
                  <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              {% if show_vendor and product.vendor %}
                  <p class="caption-with-letter-spacing">{{ product.vendor }}</p>
              {% endif %}

              <div class="product-card__price">
                  {% if product.compare_at_price > product.price %}
                      <span class="product-card__price--sale">{{ product.price | money }}</span>
                      <span class="product-card__compare">{{ product.compare_at_price | money }}</span>
                  {% else %}
                      <span>{{ product.price | money }}</span>
                  {% endif %}
              </div>

              {% if show_collection_description == true and product.description != blank %}
                  <p class="product-card__description">{{ product.description | strip_html | truncate: 100 }}</p>
              {% endif %}

           {% if enable_quick_view %}
              <div class="quick-view-button" data-product-handle="{{ product.handle }}">
                <a href="{{ product.handkle }}" class="button">
                Quick View
                </a>
              </div>
              {% endif %}
          </div>
      </div>
  </div>
</div>

<style>
    .product-card__compare {
        text-decoration: line-through;
    }
    </style>


