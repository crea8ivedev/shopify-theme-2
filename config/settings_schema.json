        "label": "Corner radius",
        "default": 0
      },
      {
        "type": "header",
        "content": "Shadow"
      },
      {
        "type": "range",
        "id": "buttons_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_horizontal_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Horizontal offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_vertical_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Vertical offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_blur",
        "min": 0,
        "max": 20,
        "step": 5,
        "unit": "px",
        "label": "Blur",
        "default": 0
      }
    ]
  }
]
