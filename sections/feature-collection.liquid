  "name": "t:sections.feature_collection.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.feature_collection.settings.color_scheme.label"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.feature_collection.settings.background_image.label"
