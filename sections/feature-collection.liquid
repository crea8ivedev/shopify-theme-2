    },
    {
      "type": "checkbox",
      "id": "enable_quick_view",
      "label": "t:sections.feature_collection.settings.enable_quick_view.label"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "t:sections.feature_collection.settings.show_vendor.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "top_padding",
      "label": "t:sections.all.padding.padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "bottom_padding",
      "label": "t:sections.all.padding.padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "t:sections.feature_collection.name"
    }
  ]
}
