      "step": 1,
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "enable_slider_mobile",
      "label": "t:sections.feature_collection.settings.enable_slider_mobile.label"
    },
    {
      "type": "header",
      "content": "Product Card"
    },
    {
      "type": "checkbox",
