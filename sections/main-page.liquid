{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

  <section class="page-widths page-width--narrows section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
    <div class="title-banner-wrapper">
      <div class="title-banner-background">
        {% if section.settings.title_background != blank %}
          <img
            src="{{ section.settings.title_background | image_url }}"
            alt="img_logo"
            loading="lazy"
            width="auto"
            height="235"
          >
        {% endif %}
        <div class="banner-content ">
          <div class="banner-content-inner">
            <h1 class="main-title page-title">
              {% if section.settings.page_title_black != blank %}
                <span>{{ section.settings.page_title_black }}</span>
              {% else %}
                {{ page.title | escape }}
              {% endif %}
            </h1>
          </div>
        </div>
      </div>
    </div>
  </section>

{% schema %}
{
  "name": "t:sections.main_page.name",
  "class": "main-page-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.main_page.settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "image_picker",
      "label": "t:sections.main_page.settings.title_background",
      "id": "title_background",
      "info": "1920 x 400px recommended"
    },
    {
      "type": "text",
      "label": "t:sections.main_page.settings.page_title_black",
      "id": "page_title_black"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.main_page.name"
    }
  ]
}
{% endschema %}


