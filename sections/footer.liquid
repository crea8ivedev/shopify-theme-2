{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }}">

</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "class": "footer-main",
  "settings": [
    {
      "type": "color_scheme",
      "label": "t:sections.all.colors.label",
      "id": "color_scheme"
    },
    {
      "type": "image_picker",
      "label": "t:sections.footer.settings.background_image.label",
      "id": "background_image"
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.social_media_icons.header"
    },
    {
      "type": "checkbox",
      "label": "t:sections.footer.settings.social_media_icons.label",
      "id": "social_media_icons",
      "default": true,
      "info": "t:sections.footer.settings.social_media_icons.info"
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.payment_methods.header"
    },
    {
      "type": "checkbox",
      "label": "t:sections.footer.settings.payment_icons.label",
      "id": "show_payment_icons",
      "default": true
    },
    {
      "type": "image_picker",
      "label": "t:sections.footer.settings.payment_icons_image.label",
      "id": "payment_icons_image"
    },
    {
      "type": "text",
      "label": "t:sections.footer.settings.copyright_text.label",
      "id": "copyright_text"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "label": "t:sections.all.padding.padding_top",
      "id": "top_padding",
      "default": 10,
      "min": 0,
      "max": 100
    },
    {
      "type": "range",
      "label": "t:sections.all.padding.padding_bottom",
      "id": "bottom_padding",
      "default": 10,
      "min": 0,
      "max": 100
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "t:sections.footer.blocks.menu.name",
      "settings": [
        {
          "type": "text",
          "label": "t:sections.footer.blocks.menu.settings.heading.label",
          "id": "heading"
        },
        {
          "type": "link_list",
          "label": "t:sections.footer.blocks.menu.settings.menu.label",
          "id": "menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.footer.blocks.text.name",
      "settings": [
        {
          "type": "text",
          "label": "t:sections.footer.blocks.text.settings.heading.label",
          "id": "heading"
        },
        {
          "type": "richtext",
          "label": "t:sections.footer.blocks.text.settings.content.label",
          "id": "content"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "t:sections.footer.blocks.newsletter.name",
      "settings": [
        {
          "type": "text",
          "label": "t:sections.footer.blocks.newsletter.settings.heading.label",
          "id": "heading"
        },
        {
          "type": "select",
          "label": "t:sections.footer.blocks.newsletter.settings.heading_size.label",
          "default": "h1",
          "id": "heading_size",
          "options": [
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__1.label",
              "value": "h1"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__2.label",
              "value": "h2"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__3.label",
              "value": "h3"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__4.label",
              "value": "h4"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__5.label",
              "value": "h5"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__6.label",
              "value": "h6"
            }
          ]
        },
        {
          "type": "richtext",
          "label": "t:sections.footer.blocks.newsletter.content.label",
          "id": "content"
        }
      ]
    },
    {
      "type": "customhtml",
      "name": "t:sections.footer.customhtml.name",
      "settings": [
        {
          "type": "text",
          "label": "t:sections.footer.customhtml.settings.heading.label",
          "id": "heading"
        },
        {
          "type": "select",
          "label": "t:sections.footer.customhtml.settings.heading_size.label",
          "id": "heading_size",
          "default": "h1",
          "options": [
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__1.label",
              "value": "h1"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__2.label",
              "value": "h2"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__3.label",
              "value": "h3"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__4.label",
              "value": "h4"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__5.label",
              "value": "h5"
            },
            {
              "label": "t:sections.footer.blocks.newsletter.settings.heading_size.options__6.label",
              "value": "h6"
            }
          ]
        },
        {
          "type": "richtext",
          "label": "t:sections.footer.customhtml.settings.content.label",
          "id": "content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.footer.presets.name"
    }
  ]
}
{% endschema %}
