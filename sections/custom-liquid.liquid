{{ 'custom-liquid.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-padding {
      padding-top: calc({{ section.settings.padding_top }}px * 0.75);
      padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
      padding-left : calc(10px * 0.75);
      padding-right : calc(10px * 0.75);
    }
  
    @media screen and (min-width: 750px) {
      .section-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
        padding-left : 10px;
        padding-right : 10px;
      }
    }
  {%- endstyle -%}

<section class="color-{{ section.settings.color_scheme }}" role="region">
    <div class="section-padding text-{{ section.settings.text_alignment }}">
      {{ section.settings.custom_code }}
    </div>
</section>
  
  {% schema %}
  {
    "name": "t:sections.custom_code_section.custom_code_label",
    "settings": [
      {
        "type": "html",
        "id": "custom_code",
        "label": "t:sections.custom_code_section.custom_code_label",
        "info": "Add custom HTML code.",
        "default" : "<h1>Welcome To Aura Beauty</h1>"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.custom_code_section.color_scheme_label",
        "default": "scheme-1"
      },
      {
      "type": "select",
      "id": "text_alignment",
      "label": "t:sections.custom_code_section.text_alignment_label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.custom_code_section.left"
        },
        {
          "value": "center",
          "label": "t:sections.custom_code_section.center"
        },
        {
          "value": "right",
          "label": "t:sections.custom_code_section.right"
        }
      ],
      "default": "center"
    },
      {
        "type": "header",
        "content": "t:sections.custom_code_section.section_padding_header"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.custom_code_section.padding_top_label",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "t:sections.custom_code_section.padding_bottom_label",
        "default": 20
      }
    ],
    "presets": [
      {
        "name": "Custom Code"
      }
    ]
  }
  {% endschema %}
  