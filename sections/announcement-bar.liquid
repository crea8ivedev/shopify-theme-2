{{ 'annoucement-bar.css' | asset_url | stylesheet_tag }}
{% assign announcement_count = 0 %}
{% for block in section.blocks  %}
  {% if block.settings.announcement_text != blank or block.settings.link_text != blank%}
    {% assign announcement_count = announcement_count | plus: 1 %}
  {% endif %}
{% endfor %}
 
{% style %}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
    }

    @media screen and (min-width: 1024px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {% if announcement_count <= 1 %}
      .announcement-info{
        justify-content:{{ section.settings.text_align }}
      }
      .announcement-bar {
          flex-grow:1;
      }
  {% endif %}
  @media (max-width:990px) {
    .announcement-bar p {
      --font-body-size: {{ settings.body_font | minus: 2 }}px;
      line-height: 22px;
    }
  }
{% endstyle %}

{% if announcement_count >= 1 %}
<e-announcement-bar data-autoplay="{% if section.settings.auto_slide == true %}true{% else %}false{% endif %}" data-autoplaySpeed="{{ section.settings.slides_speed }}" data-enableArrows="{{ section.settings.show_navigation_buttons }}" data-enableDots="true"  {% if announcement_count > 1 %} data-enable-slider="true" {% endif %}>
<div class="utility-bar color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding">
  <div class="announcement-bar-main">
    <div class="page-width">
      <div
        id="announcement-info"
        class="announcement-info {% if section.settings.text_align == 'center' %}center{% elsif section.settings.text_align == 'left' %}left{% elsif section.settings.text_align == 'right' %}right{% endif %}"
      >
        {% if announcement_count > 1 and section.settings.show_navigation_buttons == true %}
          <div class="slider-arrows {% if section.settings.hide_navigation_buttons == true %} hide-arrow {% endif %}">
            <div class="prev-btn">
              {% render 'icon-left-arrow' %}
            </div>
          </div>
        {% endif %}

        <div
          id="announcement-bar"
          class="announcement-bar{% if announcement_count > 1 %} swiper announcementbar-slide {% endif %}{% if section.settings.auto_slide == true %} auto-slide{% endif %}"

        >
          <div class="{% if announcement_count > 1 %} announcement-slider swiper-wrapper {% endif %} announcement-wrapper">
            {% for block in section.blocks %}
              {% if block.settings.announcement_text != blank or block.settings.link_text != blank %}
                <div class="{% if announcement_count > 1 %} announcement-slide swiper-slide {% endif %} txt-color">
                  <div class="announcement-content">
                    <p>
                      {{ block.settings.announcement_text }}
                      <a
                        href="{{ block.settings.link_url }}"
                        {% if block.settings.target_blank == true %}
                          target="_blank"
                        {% endif %}
                        aria-label="{{ block.settings.link_text }} - {{ block.settings.announcement_text }}"
                        class="announcement-link"
                      >
                        {{- block.settings.link_text -}}
                      </a>
                    </p>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        {% if announcement_count > 1 and section.settings.show_navigation_buttons == true %}
          <div class="slider-arrows {% if section.settings.hide_navigation_buttons == true %} hide-arrow {% endif %}">
            <div class="next-btn">
              {% render 'icon-right-arrow' %}
            </div>
          </div>
        {% endif %}

        {% if section.settings.show_close_button == true %}
          <div class="close-icon" role="button" aria-controls="announcement-bar" tabindex="0" aria-label="Close Announcement Bar">
            {% render 'icon-close' %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
</e-announcement-bar>
{% endif %}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_close_button",
      "label": "t:sections.announcement-bar.settings.show_close_button.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_navigation_buttons",
      "label": "t:sections.announcement-bar.settings.show_navigation_buttons.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "auto_slide",
      "label": "t:sections.announcement-bar.settings.auto_slide.label",
      "default": true
    },
    {
      "type": "range",
      "id": "slides_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.announcement-bar.settings.slides_speed.label",
      "default": 5
    },

    {
      "type": "select",
      "label": "t:settings_schema.global.settings.text_alignment.label",
      "id": "text_align",
      "default": "center",
      "options": [
        {
          "label": "t:settings_schema.global.settings.text_alignment.options__1.label",
          "value": "left"
        },
        {
          "label": "t:settings_schema.global.settings.text_alignment.options__2.label",
          "value": "center"
        },
        {
          "label": "t:settings_schema.global.settings.text_alignment.options__3.label",
          "value": "right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Mobile Layout"
    },
    {
      "type": "checkbox",
      "id": "hide_navigation_buttons",
      "label": "t:sections.all.arrows.hide_navigation_buttons",
      "default": true
    },
    {
        "type": "header",
        "content": "Section Padding"
      },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 12
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 12
      }
  ],
  "blocks": [
    {
      "type": "announcement_text_slider",
      "name": "Announcement",
      "settings": [
        {
          "type": "html",
          "label": "t:sections.announcement-bar.blocks.announcement_text_slider.settings.announcement_text.label",
          "id": "announcement_text",
          "default": "Welcome to our store"
        },
        {
          "type": "text",
          "label": "t:sections.announcement-bar.blocks.announcement_text_slider.settings.link_text.label",
          "id": "link_text"
        },
        {
          "type": "url",
          "label": "t:sections.announcement-bar.blocks.announcement_text_slider.settings.link_url.label",
          "id": "link_url"
        },
        {
          "type": "checkbox",
          "id": "target_blank",
          "label": "t:sections.announcement-bar.blocks.announcement_text_slider.settings.target_blank.label",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.announcement-bar.presets.name",
      "blocks": [
        {
          "type": "announcement_text_slider",
          "settings": {
            "announcement_text": "Welcome to our store"
          }
        }
      ]
    }
  ]
}
{% endschema %}
