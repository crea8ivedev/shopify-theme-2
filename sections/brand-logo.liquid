{{ 'component-brand-logo.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<div
  class="brand-logos color-{{ section.settings.color_scheme }} gradient"
  data-enable-scrolling="{{ section.settings.enable_scrolling }}"
  data-scroll-speed="{{ section.settings.scroll_speed }}"
  data-direction="{{ section.settings.direction }}"
  data-pause-on-hover="{{ section.settings.pause_on_hover }}"
>
  <div class="logo-container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.content != blank %}
      <p class="logo-desc">{{ section.settings.content }}</p>
    {% endif %}
    <div class="logo-swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings['logo-image'] != blank %}
            <div class="logo-slide swiper-slide">
              <img src="{{ block.settings.logo-image | image_url }}" alt="brand-logo" width="100%" height="100%">
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if section.settings.navigation_arrow == true %}
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Brand logo slider",
  "settings": [
    {
      "type": "color_scheme",
      "label": "Color scheme",
      "id": "color_scheme"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content"
    },

    {
      "type": "checkbox",
      "label": "Display Navigation Arrows",
      "id": "navigation_arrow",
      "default": false
    },
    {
      "type": "header",
      "content": "Scrolling Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_scrolling",
      "label": "Enable Scrolling",
      "default": true
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Scroll Direction",
      "options": [
        { "value": "left", 
          "label": "Left to Right" 
        },
        { "value": "right", 
          "label": "Right to Left" 
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause on Hover",
      "default": true
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo-image",
          "label": "Logo Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Logo Slider"
    }
  ]
}
{% endschema %}
