{{ 'component-brand-logo.css' | asset_url | stylesheet_tag }}

<style>
  .animate-logo-group-marquee {
    animation: logo-group-marquee {{ section.settings.slides_speed | default: 30 }}s linear infinite;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<div class="page-width section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="brand-logos ">
    <div class="logo-container">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.sub_heading != blank %}
        <p class="sub-title">{{ section.settings.sub_heading }}</p>
      {% endif %}
      <div class="logo-swiper-container">
        <ul class="logo-wrapper {% if section.settings.enable_slider %}animate-logo-group-marquee{% else %}logo-grid{% endif %}">
          {% for block in section.blocks %}
            {% if block.settings.brand_logo != blank %}
              <li class="logo-slide">
                <img
                  src="{{ block.settings.brand_logo | img_url:'master' }}"
                  alt="brand-logo"
                  width="100"
                  height="100"
                  loading="lazy"
                >
              </li>
            {% else %}
              <li class="logo-slide placeholder">
                {{ 'image' | placeholder_svg_tag }}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "t:sections.brand-logo.name",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.brand-logo.settings.heading.label",
      "default": "Brand Logo"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "t:sections.brand-logo.settings.sub_heading.label",
      "default": "Brand Logo"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.brand-logo.settings.color_scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "t:sections.brand-logo.settings.enable_slider.label",
      "default": false
    },
    {
      "type": "range",
      "id": "slides_speed",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "s",
      "label": "t:sections.brand-logo.settings.slides_speed.label",
      "default": 30
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.brand-logo.settings.padding_top.label",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.brand-logo.settings.padding_bottom.label",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "t:sections.brand-logo.blocks.logo.settings.brand_logo.label"
        },
        {
          "type": "url",
          "id": "add_link",
          "label": "t:sections.brand-logo.blocks.logo.settings.add_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.brand-logo.presets.name",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}