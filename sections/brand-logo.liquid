{{ 'component-brand-logo.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .brand__logo-swiper-container {
    background-color: {{ section.settings.background_color }}
  }
{%- endstyle -%}

<div
  class="brand-logos-main color-{{ section.settings.color_scheme }} gradient"
  data-enable-scrolling="{{ section.settings.enable_scrolling }}"
  data-scroll-speed="{{ section.settings.scroll_speed }}"
  data-direction="{{ section.settings.direction }}"
>
  <div class="brand-logo-container page-width">
    {% if section.settings.heading != blank %}
      <h2 class="brand-logo-title">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.content != blank %}
      <div class="logo_description">{{ section.settings.content }}</div>
    {% endif %}
  </div>
  <div class="brand__logo-swiper-container">
    <div class="slider-swiper-container brand-logo-swiper {% if section.settings.full_width %}slider-full-width{% endif %} ">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings['logo-image'] != blank %}
            <div class="brand-logo-slide swiper-slide">
              <img src="{{ block.settings.logo-image | image_url }}" alt="brand-logo" width="100%" height="100%">
            </div>
          {% else %}
            {{ 'image' | placeholder_svg_tag }}
            <!-- Fallback Placeholder -->
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Brand Logo Slider",
  "settings": [
    {
      "type": "color_scheme",
      "label": "t:sections.brand-logo.settings.color_scheme.label",
      "id": "color_scheme"
    },
    {
      "type": "color",
      "label": "t:sections.brand-logo.settings.color_background.label",
      "id": "background_color"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "t:sections.brand-logo.settings.heading.label",
      "default": "t:sections.brand-logo.settings.default_heading.label"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "t:sections.brand-logo.settings.content.label",
      "default": "t:sections.brand-logo.settings.default_content.label"
    },

    {
      "type": "header",
      "content": "Scrolling Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_scrolling",
      "label": "t:sections.brand-logo.settings.enable_scrolling.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.brand-logo.settings.full_width.label",
      "default": true
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "t:sections.brand-logo.settings.scroll_speed.label",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "select",
      "id": "direction",
      "label": "t:sections.brand-logo.settings.direction.label",
      "options": [
        { "value": "left", "label": "Left to Right" },
        { "value": "right", "label": "Right to Left" }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.brand-logo.settings.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.brand-logo.settings.padding_bottom.label",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo-image",
          "label": "t:sections.brand-logo.blocks.logo.settings.brand_logo.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.brand-logo.presets.name",
      "blocks": [{ "type": "logo" }, { "type": "logo" }, { "type": "logo" }, { "type": "logo" }, { "type": "logo" }]
    }
  ]
}
{% endschema %}
