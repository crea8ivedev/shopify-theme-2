<script src="{{ 'component-blog.js' | asset_url }}" defer="defer"></script>

{% style %}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
    }

    @media screen and (min-width: 1024px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    @media screen and (max-width: 768px){
        .blog-button{
            display: none;
        }
    }
{% endstyle %}

<section
    class="{{ section.settings.num_posts }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}"
    data-show-mobile-slider="true"
  >
    <div class="container">
      <{{ section.settings.heading_size }}>{{ section.settings.heading }}</{{ section.settings.heading_size }}>
      <p>{{ section.settings.subheading }}</p>
  
      <div
        class="blog-grid swiper-container"
        style="display: grid; grid-template-columns: repeat({{ section.settings.num_columns }}, 1fr); gap: 20px;"
        data-show-mobile-slider="true"
      >
        {% assign blog_articles = section.settings.blog.articles | default: (1..section.settings.num_posts) %}
        
        <div class="swiper-wrapper">
          {% for article in blog_articles limit: section.settings.num_posts %}
            {% if section.settings.blog != blank %}
              {% render 'article-card',
                blog: section.settings.blog,
                article: article,
                show_image: section.settings.show_featured_image,
                show_date: section.settings.show_date,
                show_author: section.settings.show_author
              %}
            {% else %}
              {%- assign placeholder_image_index = forloop.index0 | modulo: 3 | plus: 1 -%}
              {%- assign placeholder_image = 'blog-apparel-' | append: placeholder_image_index -%}
              <div class="article-card swiper-slide article-card-wrapper card--{{ settings.blog_card_style }}">
                <div class="card article-card">
                  <div class="article-card__image-wrapper card__media">
                    {%- if section.settings.show_featured_image -%}
                      {{ placeholder_image | placeholder_svg_tag: 'blog-placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="card__content">
                    <div class="card__information">
                      <h3 class="card__heading h2">
                        {{ 'sections.featured_blog.onboarding_title' | t }}
                      </h3>
                      <p class="article-card__excerpt rte-width">
                        {{ 'sections.featured_blog.onboarding_content' | t }}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
  
      {%- if section.settings.show_view_all and section.settings.num_posts < section.settings.blog.articles_count -%}
        <div class="blog-button">
          <a
            href="{{ section.settings.link_url }}"
            {% if section.settings.external_link %}target="_blank"{% endif %}
            class="button button--primary"
          >
            {{ section.settings.link_text }}
            {% if section.settings.show_arrow %}
              <span class="button--up-arrow button--arrow-margin">
                {% render 'icon-up-arrow' %}
              </span>
            {% endif %}
          </a>
        </div>
      {% endif %}
    </div>
  </section>


{% schema %}
{
  "name": "Blog Post",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest Blog Posts"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        { 
            "value": "h1", 
            "label": "Large" 
        },
        { 
            "value": "h2", 
            "label": "Medium" 
        },
        { 
            "value": "h3", 
            "label": "Small" 
        }
      ],
      "default": "h2"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Stay updated with our latest news and articles."
    },

    {
      "type": "blog",
      "id": "blog",
      "label": " Blog"
    },
    {
      "type": "range",
      "id": "num_posts",
      "label": "Number of blog post to show",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "num_columns",
      "label": "Number of columns on desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },

    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "Show Featured Image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show Published Date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show Author",
      "default": true
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "t:sections.featured-blog.settings.show_view_all.label"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text",
      "default": "View All"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "external_link",
      "label": "External Link",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Show Arrow",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Blog Post",
      "settings": {
        "heading": "Latest Articles",
        "subheading": "Explore the latest updates and insights.",
        "num_posts": 3,
        "num_columns": 3,
        "show_view_all": true,
        "link_text": "View All"
      }
    }
  ]
}
{% endschema %}
