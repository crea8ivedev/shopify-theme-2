{{ 'rich-text.css' | asset_url | stylesheet_tag }}

<style>
#richtext-{{ section.id }} {
    position: relative;
    text-align: {{ section.settings.text_alignment }};
    padding-top: {{ section.settings.top_padding }}px; 
    padding-bottom: {{ section.settings.bottom_padding }}px;
}

/* Add a pseudo-element for background */
#richtext-{{ section.id }}::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, 0.5), 
        rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, 0.5)
        ), url({{ section.settings.desktop_bg_image | image_url }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: -1;
}

/* Mobile background */
@media screen and (max-width: 750px) {
    #richtext-{{ section.id }}::before {
        background: linear-gradient(
        rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, 0.5), 
        rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, 0.5)
        ), url({{ section.settings.mobile_bg_image | image_url }});
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
}

</style>

<section class="rich-text-section{% if section.settings.desktop_bg_image %} desktop-bg-image{% endif %}{% if section.settings.mobile_bg_image %} mobile-bg-image{% endif %}" id="richtext-{{ section.id }}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'heading' %}
        {% if block.settings.heading != blank %}
          <div class="richtext-heading" id="{{ section.id }}-heading-padding" 
          style="padding-top: {{ block.settings.heading_top_padding }}px; padding-bottom: {{ block.settings.heading_bottom_padding }}px;">
          <{{ block.settings.heading_size }}>
            {{ block.settings.heading }}
          </{{ block.settings.heading_size }}>
          </div>    
        {% endif %}
      {% when 'subheading' %}
        {% if block.settings.subheading != blank %}
        <div class="rich-text-subheading" style="padding-top: {{ block.settings.subheading_top_padding }}px; padding-bottom: {{ block.settings.subheading_bottom_padding }}px;">
            <h4>{{ block.settings.subheading }}</h4>
        </div>
        {% endif %}
      {% when 'divider' %}
        {% if block.settings.show_line != blank %}
        <div class="rich-text-divider">
                <div class="divider" style="padding-top: {{ block.settings.divider_top_padding }}px; padding-bottom: {{ block.settings.divider_bottom_padding }}px;">
                    <hr width="100%" color="black">
                </div>
        </div>
        {% endif  %}
       {% when 'button' %}
        {% if block.settings.style == 'outline' or block.settings.style == 'text' %}
          <style>
            .richtext-button .button:hover {
              background-color: rgba(var(--color-text)) !important;
              color: rgb(var(--color-button-text)) !important;
            }
            .button-up-arrow svg {
              fill: rgba(var(--color-text));
            }
            .button:hover .button-up-arrow svg {
              fill: white !important;
            }
          </style>
          {% endif %}
          {% if block.settings.style == 'solid' %}
            <style>
              .richtext-button .button {
                background-color: rgba(var(--color-text)) !important;
                color: rgb(var(--color-button-text)) !important;
              }
              .richtext-button .button:hover {
                background-color: transparent !important;
                color: rgba(var(--color-text)) !important;
              }
            </style>
            {% endif %}
        {% if block.settings.link_text != blank %}
        <div class="richtext-button" style="padding-top: {{ block.settings.button_top_padding }}px; padding-bottom: {{ block.settings.button_bottom_padding }}px;">
            <a href="{{ block.settings.link_url }}">
                <button class="button" {% if block.settings.style == 'outline' %}style="text-decoration: underline;"{% endif %} {% if block.settings.style == 'solid' %}style="font-weight: bold;"{% endif %}>{{ block.settings.link_text }}{% if block.settings.show_arrow != blank %}<span class="button-up-arrow button-arrow-margin">{% render 'icon-up-arrow' %}</span>{% endif %}</button>
            </a>
        </div>
        {% endif %}
       {% when 'image' %}
        {% if block.settings.image != blank %}
        <div class="rich-text-img image" style="padding-top: {{ block.settings.image_top_padding }}px; padding-bottom: {{ block.settings.image_bottom_padding }}px;">
            <img src="{{ block.settings.image | image_url }}" alt="Image" height="200" width="{{ block.settings.width }}">
        </div>
        {% endif %}
    {% endcase %}
  {% endfor %}
</section>

