    
    <style>
      .testimonial-section {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
      .testimonial-slider {
        overflow: hidden;
        position: relative;
      }
      .testimonial-grid {
        display: grid;
        grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
        gap: 20px;
      }
      @media (max-width: 768px) {
        .testimonial-grid {
          grid-template-columns: {% if section.settings.stack_mobile %}1fr{% else %}repeat(2, 1fr){% endif %};
        }
      }
      .swiper-slide {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }
      .testimonial-item img {
        border-radius: 50%;
        margin-bottom: 10px;
      }
    </style>
    
    <section class="testimonial-section" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; brand-logos color-{{ section.settings.color_scheme }} gradient">
      {% if section.settings.heading != blank %}
        <h2 class="testimonial-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="testimonial-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    
      {% if section.settings.desktop_layout == 'slider' %}
      <div class="swiper testimonial-slider">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide testimonial-card">
              <div class="testimonial-header">
                {% if block.settings.image %}
                  <img src="{{ block.settings.image | image_url: width: 80 }}" class="testimonial-image" alt="{{ block.settings.review_name }}" width="80px" height="80px">
                {% endif %}
                <div class="testimonial-info">
                  <h3 class="testimonial-name">{{ block.settings.review_name }}</h3>
                  <p class="testimonial-designation">{{ block.settings.review_designation }}</p>
                  <div class="testimonial-rating">
                    {% for i in (1..block.settings.ratings) %}
                      <span class="star">&#9733;</span>
                    {% endfor %}
                  </div>
                </div>
                <span class="quote-icon">❝</span>
              </div>
              <h2 class="testimonial-title">{{ block.settings.caption }}</h2>
              <p class="testimonial-text">{{ block.settings.description }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
      {% else %}
      <div class="testimonial-grid" style="display: grid; grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr); gap: 20px;">
        {% for block in section.blocks %}
          <div class="testimonial-card">
            <div class="testimonial-header">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url: width: 80 }}" class="testimonial-image" alt="{{ block.settings.review_name }}" width="80px" height="80px">
              {% endif %}
              <div class="testimonial-info">
                <h3 class="testimonial-name">{{ block.settings.review_name }}</h3>
                <p class="testimonial-designation">{{ block.settings.review_designation }}</p>
                <div class="testimonial-rating">
                  {% for i in (1..block.settings.ratings) %}
                    <span class="star">&#9733;</span>
                  {% endfor %}
                </div>
              </div>
              <span class="quote-icon">❝</span>
            </div>
            <h2 class="testimonial-title">{{ block.settings.caption }}</h2>
            <p class="testimonial-text">{{ block.settings.description }}</p>
          </div>
        {% endfor %}
      </div>
      {% endif %}
    </section>

    
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        var swiper = new Swiper(".testimonial-slider", {
          loop: true,
          slidesPerView: 1,
          spaceBetween: 20,
          breakpoints: {
            768: {
              slidesPerView: {{ section.settings.columns_desktop }},
              spaceBetween: 20
            }
          }
        });
      });
      
      
    </script>
    
    
{% schema %}
{
  "name": "Testimonial Slider",
  "settings": [
    {
      "type": "color_scheme",
      "label": "t:sections.testimonial_slider.settings.color_scheme.label",
      "id": "color_scheme"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.testimonial_slider.settings.heading.label"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:sections.testimonial_slider.settings.subheading.label"
    },
    {
      "type": "select",
      "id": "desktop_layout",
      "label": "t:sections.testimonial_slider.settings.desktop_layout.label",
      "options": [
        { "value": "grid", "label": "t:sections.testimonial_slider.settings.desktop_layout.options.grid" },
        { "value": "slider", "label": "t:sections.testimonial_slider.settings.desktop_layout.options.slider" }
      ],
      "default": "slider"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "t:sections.testimonial_slider.settings.columns_desktop.label",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "stack_mobile",
      "label": "t:sections.testimonial_slider.settings.stack_mobile.label",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.testimonial_slider.settings.padding_top.label",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.testimonial_slider.settings.padding_bottom.label",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "t:sections.testimonial_slider.blocks.testimonial.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.testimonial_slider.blocks.testimonial.settings.image.label",
          "info": "t:sections.testimonial_slider.blocks.testimonial.settings.image.info",
        },
        {
          "type": "text",
          "id": "review_name",
          "label": "t:sections.testimonial_slider.blocks.testimonial.settings.review_name.label"
        },
        {
          "type": "text",
          "id": "review_designation",
          "label": "t:sections.testimonial_slider.blocks.testimonial.settings.review_designation.label"
        },
        {
          "type": "range",
          "id": "ratings",
          "label": "t:sections.testimonial_slider.blocks.testimonial.settings.ratings.label",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "text",
          "id": "caption",
          "label": "t:sections.testimonial_slider.blocks.testimonial.settings.caption.label"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "t:sections.testimonial_slider.blocks.testimonial.settings.description.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.testimonial_slider.presets.name",
      "category": "t:sections.testimonial_slider.presets.category",
      "blocks": [
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}

{% endschema %}