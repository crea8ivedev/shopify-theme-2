{{ 'text-rotate.css' | asset_url | stylesheet_tag }}
<script src="{{ 'text-rotate.js' | asset_url }}" defer="defer"></script>

{% style %}
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
    }
  
    .text-rotate.section-{{ section.id }}-padding .marquee .marquee_text {
    display: inline-block;
    animation: marquee {{ section.settings.scrolling_speed }}s linear infinite;
    width: 100%;
  }
    
  
  @media screen and (min-width: 1024px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }
{% endstyle %}

<rotate-bar class="text-rotate {% if section.settings.show_border == true %} show-border {% endif %} section-{{ section.id }}-padding">
  <div class="marquee color-{{section.settings.color_scheme}}" style="background-color: {{ section.settings.color-text }};">
    <div class="marquee_text">
      <ul class="marquee-content-primary">
        {% for block in section.blocks %}
          {% if block.settings.text-marqee %}
          <li>{{ block.settings.text-marqee }}</li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</rotate-bar>

{% schema %}
{
  "name": "t:sections.rotate-bar.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
        "type": "range",
        "label": "t:sections.rotate-bar.settings.scrolling_speed.label",
        "id": "scrolling_speed",
        "default": 10,
        "min": 10,
        "max": 30,
        "step": 5,
        "unit": "s"
      },
      {
        "type": "checkbox",
        "label": "Show Border",
        "id": "show_border",
        "default": true
    },
    {
        "type": "header",
        "content": "t:sections.rotate-bar.settings.section_padding.header"
      },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.rotate-bar.settings.section_padding.padding_top.label",
      "default": 12
    },
    
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.rotate-bar.settings.section_padding.padding_bottom.label",
      "default": 12
    },
    
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "text-marqee",
          "label": "t:sections.rotate-bar.blocks.text_block.settings.rotate_text.label",
          "default": "Welcome To The Store"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.rotate-bar.name"
    }
  ]
}
{% endschema %}
